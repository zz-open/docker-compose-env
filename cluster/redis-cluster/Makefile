include .env
include ../_common/common.mk

CONTAINERS=${REDIS_CONTAINER_NAME_NODE1} ${REDIS_CONTAINER_NAME_NODE2} ${REDIS_CONTAINER_NAME_NODE3} ${REDIS_CONTAINER_NAME_NODE4} ${REDIS_CONTAINER_NAME_NODE5} ${REDIS_CONTAINER_NAME_NODE6} ${REDIS_CONTAINER_NAME_NODE7} ${REDIS_CONTAINER_NAME_NODE8} ${REDIS_CONTAINER_NAME_NODE9} 
REDIS_CONN=redis-cli -a ${REDIS_PASSWORD} -p ${REDIS_CONTAINER_PORT} -c


.PHONY: help test
help:
	@echo "usage: make <option>"
	@echo "options and effects:"
	@echo "    help                     : Show help"
	@echo "    test                     : Test ..."
	@echo "    build                    : build"
	@echo "    start                    : 启动所有服务"

test:
	@echo "test ..."

.PHONY: build start
build:
	@${DOCKER_COMPOSE_BUILD} ${CONTAINERS}

start:
	@${DOCKER_COMPOSE_UP} -d ${CONTAINERS}

enter-redis-box:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_BOX_CONTAINER_NAME} bash

conn-redis1:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE1} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE1}

conn-redis2:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE2} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE2}

conn-redis3:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE3} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE3}

conn-redis4:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE4} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE4}

conn-redis5:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE5} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE5}

conn-redis6:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE6} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE6}

conn-redis7:
	@${DOCKER_COMPOSE_EXEC} ${REDIS_CONTAINER_NAME_NODE7} ${REDIS_CONN} -h ${REDIS_BACKEND_IP_NODE7}