###########################################################
###################### General Setup ######################
###########################################################

### Drivers ################################################

# All volumes driver
VOLUMES_DRIVER=local

# TimeZone ################################################
TZ=Asia/Shanghai

# Choose storage path on your machine. For all storage systems
DATA_PATH_HOST=~/.docker-env/zookeeper-local

# log storage path on your machine.
LOG_PATH_HOST=../logs/zookeeper-local

# Define the prefix of container names. This is useful if you have multiple projects that use laradock to have separate containers per project.
COMPOSE_PROJECT_NAME=docker-env-zookeeper-local

### ZOOKEEPER #################################################

ZOOKEEPER_VERSION=latest
ZOOKEEPER_HOST_PATH=./zookeeper

### ZOOKEEPER1 #################################################
ZOOKEEPER_HOSTNAME=zookeeper
ZOOKEEPER_CONTAINER_NAME=zookeeper
ZOOKEEPER_NAME=zookeeper
ZOOKEEPER_CONN="zookeeper:2181"
ZOOKEEPER_SERVERS="server.1=zookeeper:2888:3888;2181"
ZOOKEEPER_HOST_PORT=12181
ZOOKEEPER_ID=1
ZOOKEEPER_FRONTEND_IP=172.10.2.181
ZOOKEEPER_BACKEND_IP=172.11.2.181

### ZOONAVIGATOR #################################################

ZOONAVIGATOR_HOSTNAME=zoonavigator
ZOONAVIGATOR_CONTAINER_NAME=zoonavigator
ZOONAVIGATOR_HOST_PATH=./zoonavigator
ZOONAVIGATOR_VERSION=latest
ZOONAVIGATOR_HOST_PORT=9000 
ZOONAVIGATOR_FRONTEND_IP=172.10.2.180
ZOONAVIGATOR_BACKEND_IP=172.11.2.180
