###########################################################
###################### General Setup ######################
###########################################################

### Drivers ################################################

# All volumes driver
VOLUMES_DRIVER=local

# TimeZone ################################################
TZ=Asia/Shanghai

### Docker Host IP ########################################

# Enter your Docker Host IP (will be appended to /etc/hosts). Default is `10.0.75.1`
DOCKER_HOST_IP=172.12.0.1
DOCKER_HOST_BIP=172.12.0.0/16

# Choose storage path on your machine. For all storage systems
DATA_PATH_HOST=~/.docker-env/pulsar-local

# log storage path on your machine.
LOG_PATH_HOST=../logs/pulsar-local

# Define the prefix of container names. This is useful if you have multiple projects that use laradock to have separate containers per project.
COMPOSE_PROJECT_NAME=docker-env-pulsar-local

### PULSAR #################################################

PULSAR_VERSION=latest

### PULSAR STANDALONE ###########################################

PULSAR_CONTAINER_NAME=pulsar
PULSAR_HOSTNAME=pulsar
PULSAR_HOST_PATH=./pulsar
PULSAR_FRONTEND_IP=172.10.2.60
PULSAR_BACKEND_IP=172.11.2.60

### PULSAR MANAGER #################################################

PULSAR_MANAGER_CONTAINER_NAME=pulsar-manager
PULSAR_MANAGER_HOSTNAME=pulsar-manager
PULSAR_MANAGER_HOST_PATH=./pulsar-manager
PULSAR_MANAGER_VERSION=v0.3.0
PULSAR_MANAGER_FRONTEND_IP=172.10.2.61
PULSAR_MANAGER_BACKEND_IP=172.11.2.61
