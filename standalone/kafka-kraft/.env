###########################################################
###################### General Setup ######################
###########################################################

### Drivers ################################################

# All volumes driver
VOLUMES_DRIVER=local

# TimeZone ################################################
TZ=Asia/Shanghai

# Choose storage path on your machine. For all storage systems
DATA_PATH_HOST=~/.docker-env/kafka-kraft-local

# log storage path on your machine.
LOG_PATH_HOST=../logs/kafka-kraft-local

# Define the prefix of container names. This is useful if you have multiple projects that use laradock to have separate containers per project.
COMPOSE_PROJECT_NAME=docker-env-kafka-kraft-local

#### KAFKA UI ########################################

KAFKA_UI_CONTAINER_NAME=krl-kafka-ui
KAFKA_UI_HOSTNAME=krl-kafka-ui
KAFKA_UI_VERSION=latest
KAFKA_UI_HOST_PATH=./kafka-ui
KAFKA_UI_HOST_HTTP_PORT=9000
KAFKA_UI_FRONTEND_IP=172.10.2.205
KAFKA_UI_BACKEND_IP=172.11.2.205

### KAFKA ########################################

KAFKA_CONTAINER_NAME=krl-kafka
KAFKA_HOSTNAME=krl-kafka
KAFKA_VERSION=3.6
KAFKA_HOST_PATH=./kafka
KAFKA_CFG_NODE_ID=0
KAFKA_HOST_PORT=9092
KAFKA_BROKERS="krl-kafka:9092"
KAFKA_FRONTEND_IP=172.10.2.206
KAFKA_BACKEND_IP=172.11.2.206